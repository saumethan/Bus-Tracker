<!-- views/pages/login.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("../partials/head") %>
</head>

<body class="login-page">
    <header>
        <%- include("../partials/header") %>
    </header>
    <main class="login-register">
        <div id="login-container">
            <div id="login-section">
                <h1>Login</h1>
                <!-- Update form action to /login -->
                <form action="/login" method="POST">
                    <input type="email" placeholder="Email" name="uname" required><br>
                    <input type="password" placeholder="Password" name="upass" required><br>

                    <% if (typeof error !== "undefined") { %>
                        <div class="error-message"><%= error %></div>
                    <% } %>

                    <!-- Removed the anchor tag wrapping the button -->
                    <button id="login-button" type="submit">Submit</button>
                    <p><a href="/create">Don't have an account? Create one!</a></p>
                </form>
            </div>
        </div>
    </main>
</body>
</html>
