<!-- views/pages/setings.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("../partials/head") %>
    <script src="/js/settings.js"></script>
</head>

<body>
    <header>
        <%- include("../partials/header") %>
    </header>
    <main>
        <div class="container pt-4">
            <div class="row justify-content-center">
                <div class="col-12 col-lg-10 col-xl-8 mx-auto">

                    <!-- Map Settings -->
                    <strong class="mb-0">Map Settings</strong>
                    <p>Here you can manage your default map settings</p>

                    <div class="list-group mb-5 shadow">

                        <!-- Map Zoom -->
                        <div class="list-group-item">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <strong class="mb-0">Change Map Zoom</strong>
                                    <p class="text-muted mb-0">Select your default map zoom.</p>
                                </div>
                                <button class="btn btn-light" data-toggle-section="mapZoomForm">
                                    <i class="fas fa-chevron-down"></i>
                                </button>
                            </div>
                            <div id="mapZoomForm" class="mt-3" style="display: none;">
                                <form id="zoomSettingsForm">
                                    <div class="form-group mb-3">
                                        <label for="mapZoomRange" class="d-flex justify-content-between">
                                            <span>Zoom Out</span>
                                            <span>Zoom In</span>
                                        </label>
                                        <input type="range" class="form-range" min="5" max="17" id="mapZoomRange" value="10">
                                    </div>
                                    <button type="submit" class="btn btn-primary">Save</button>
                                </form>
                            </div>                            
                        </div>

                        <!-- Default Location -->
                        <div class="list-group-item">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <strong class="mb-0">Set Default Location</strong>
                                    <p class="text-muted mb-0">Enter your preferred default location.</p>
                                </div>
                                <button class="btn btn-light" data-toggle-section="locationForm">
                                    <i class="fas fa-chevron-down"></i>
                                </button>
                            </div>
                            <div id="locationForm" class="mt-3" style="display: none;">
                                <form id="locationSettingsForm">
                                    <div class="form-group mb-3">
                                        <label for="defaultLocation">Default Location</label>
                                        <input type="text" class="form-control" id="defaultLocation" placeholder="e.g., Aberdeen" />
                                    </div>
                                    <button type="submit" class="btn btn-primary">Save</button>
                                </form>
                            </div>
                        </div>
                    </div>

                <!-- Account Manager -->
                <hr class="my-4" />
                <strong class="mb-0">Account Manager</strong>
                <p>Here you can manage your account details</p>
                                
                <div class="list-group mb-5 shadow">
                    


                    
                    <!-- Log Out -->
                    <div class="list-group-item">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <strong class="mb-0">Log Out</strong>
                                <p class="text-muted mb-0">Log out of your account</p>
                            </div>
                            <button class="btn btn-light" onclick="toggleSection('logoutForm')">
                                <i class="fas fa-chevron-down"></i>
                            </button>
                        </div>
                        <div id="logoutForm" class="mt-3" style="display: none;">
                            <form method= "POST" action="settings/logout">
                                <div class="form-group">
                                    <!--Show the details of the account currently logged in including name and email-->
                                    <h3>Current Details</h1>
                                        <p>Name: 
                                            <%= loggedIn && user 
                                                ? `${user.name.title} ${user.name.first}` 
                                                : "Not logged in" 
                                            %>
                                        </p>
                                        <p>Email: 
                                            <%= loggedIn && user 
                                                ? user.login.username 
                                                : "Not logged in" 
                                            %>
                                        </p>
                                </div>
                                <button type="submit" class="btn btn-primary">Log Out Now</button>
                            </form>
                        </div>
                    </div>

                    <!-- Change Password -->
                    <div class="list-group-item">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <strong class="mb-0">Change Password</strong>
                                <p class="text-muted mb-0">Update your Password.</p>
                            </div>
                            <button class="btn btn-light" onclick="toggleSection('passwordForm')">
                                <i class="fas fa-chevron-down"></i>
                            </button>
                        </div>
                        <div id="passwordForm" class="mt-3" style="display: none;">
                            <form method = "POST" action="settings/changepassword">
                                <div class="form-group">
                                    <label for="oldpass">Enter Old Password</label>
                                    <input type="text" id="oldpass" class="form-control" placeholder="Enter your old password" name="oldpassword" />
                                    <label for="newpassword">New Password</label>
                                    <input type="text" id="newpassword" class="form-control" placeholder="Enter new password" name="newpassword" />
                                    <label for="confirmpass">Confirm New Password</label>
                                    <input type="text" id="confirmpass" class="form-control" placeholder="Confirm new password" name="confirmpassword"/>
                                </div>
                                <button type="submit" class="btn btn-primary">Save</button>
                            </form>
                        </div>
                    </div>

                    <!-- Delete Account -->
                    <div class="list-group-item">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <strong class="mb-0 text-danger">Delete Account</strong>
                                <p class="text-muted mb-0">Permanently remove your account.</p>
                            </div>
                            <button class="btn btn-light" onclick="toggleSection('deleteAccountForm')">
                                <i class="fas fa-chevron-down"></i>
                            </button>
                        </div>
                        <div id="deleteAccountForm" class="mt-3" style="display: none;">
                            <form method = "POST" action="settings/deleteaccount">
                                <div class="form-group">
                                    <label for="confirmDelete">Type "DELETE" to confirm</label>
                                    <input type="text" id="confirmDelete" class="form-control" placeholder="DELETE" name="deletetext" />
                                </div>
                                <button type="submit" class="btn btn-danger">Delete Account</button>
                            </form>
                        </div>
                    </div>
                
                </div>
                
                
                <script>
                    function toggleSection(sectionId) {
                        const section = document.getElementById(sectionId);
                        section.style.display = (section.style.display === "none" || section.style.display === "") ? "block" : "none";
                    }
                </script>
                
                <!-- FontAwesome for arrow icons -->
                <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js"></script>
                
                                



                </div>
            </div>
            
            </div>        
    </main>
    <footer>
        <%- include("../partials/footer") %>
    </footer>

</body>
</html>